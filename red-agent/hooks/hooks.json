{
  "description": "Validates red-agent sub-agent outputs using Pydantic models",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "uv run \"${CLAUDE_PLUGIN_ROOT}/hooks/validate-agent-output.py\"",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
